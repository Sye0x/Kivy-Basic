CustomScrollView:

<CustomScrollView>:
    CustomStackLayout:
        size_hint: 1, None
        height: self.minimum_height if self.children else 1


<CustomStackLayout>:
    padding: ('20dp', '20dp', '20dp', '20dp')

<CustomGridLayout>:
    cols: 3
    Button:
        size_hint: .5,1.0
        text:'A'
    CustomBoxLayout:
    Button:
        text:'C'
    Button:
        size_hint: .5,1.0
        text:'D'
    Button:
        text:'E'
    Button:
        text:'F'
    
    
<CustomBoxLayout>:
    orientation:'vertical'
    Button:
        text:'A'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text:'B'
        Button:
            text:'C'
        Button:
            text:'D'
    